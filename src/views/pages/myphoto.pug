extends ../index.pug

block main
    +headerFotoBook(user)
    .row.myphoto-block
        .col-lg-1.col-xl-2.d-flex.justify-content-center.block-user
            +navigation
        .col-lg-10.col-xl-8
            .block-content.d-flex.justify-content-between.flex-column
                .block-content-main
                    .d-flex.justify-content-end(style='margin-bottom: 30px; margin-right: 15px')
                        a.btn.btn-success(href='/me/photo/add-photo' type='button') Add New Photo
                    .row
                        each photo in data
                            .col-sm-6.col-md-4.col-lg-4.col-xl-3.mb-4
                                +myPhotoCard(photo.image, photo.title, photo.status, photo._id)
            
                .custom-panigation
                    ul.pagination
                        li.page-item.disabled
                            a.page-link(href='#') Previous
                        li.page-item
                            a.page-link(href='#') 1
                        li.page-item
                            a.page-link(href='#') 2
                        li.page-item
                            a.page-link(href='#') 3
                        li.page-item
                            a.page-link(href='#') Next
        .col-lg-1.col-xl-2



