extends ../index.pug

block main
    +headerFotoBook(user)
    .row.myphoto-block
        .col-lg-1.col-xl-2.d-flex.justify-content-center.block-user
            +navigation("album")
        .col-lg-10.col-xl-8
            .block-content.d-flex.justify-content-between.flex-column
                .block-content-main
                    .d-flex.justify-content-end(style='margin-bottom: 30px; margin-right: 15px')
                        a.btn.btn-success(href='/me/album/add-album' type='button') Add New Album
                    .row
                        if(data.length === 0)
                            img.isEmpty(src="https://static.thenounproject.com/png/203873-200.png")
                        else
                            each photo in data
                                .col-sm-6.col-md-4.col-lg-4.col-xl-3.mb-4
                                    +myAlbumCard(photo.images, photo.title, photo.status, photo._id)
            
                if(totalPage > 1)
                    +panigation(totalPage, currentPage, "albums")
        .col-lg-1.col-xl-2



